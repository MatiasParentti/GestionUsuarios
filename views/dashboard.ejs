  <script>
    async function fetchUser() {
      const res = await fetch('/auth/me', {
        credentials: 'include',
      });

      if (res.ok) {
        const data = await res.json();
        document.getElementById('userInfo').innerText = `Usuario autenticado: ${data.username}`;
      } else {
        document.getElementById('userInfo').innerText = 'No hay sesiÃ³n activa';
      }
    }

    document.getElementById('logout').addEventListener('click', async () => {
      await fetch('/auth/logout', {
        method: 'POST',
        credentials: 'include',
      });
      window.location.href = '/login';
    });

    fetchUser();
  </script>
