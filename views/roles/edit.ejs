<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Edici√≥n de Roles</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">

  <div>
    <div class="mb-3">
      <a href="/roles" class="btn btn-primary">Volver a roles</a>
      <a href="/dashboard" class="btn btn-primary">Inicio</a>
    </div>


    <div class="row mt-5">
      <div class="col">



        <h1>Editar Rol</h1>

        <form action="/roles/<%= role.id %>" method="POST">
          <label class="form-label">Nombre:</label>
          <input class="form-control" type="text" name="name" value="<%= role.name %>" required />

          <h3 class="mt-3">Permisos</h3>
          <% if (permisos.length===0) { %>
            <p>No hay permisos</p>
            <% } else { %>
              <% permisos.forEach(permiso=> { %>
                <div class="input-group mt-3">
                  <div class="input-group-text">
                    <input class="form-check-input mt-0" type="checkbox" name="permisos" value="<%= permiso.id %>"
                      aria-label="Checkbox for following text input"
                      <%=permisosAsignadosIds.includes(Number(permiso.id)) ? 'checked' : '' %>>
                  </div>
                  <input type="text" class="form-control" value="<%= permiso.name %>" readonly disabled
                    aria-label="Text input with checkbox"> 
                </div>
                <% }) %>
                  <% } %>


                    <button class="btn btn-primary mt-3" type="submit">Actualizar</button>
        </form>




      </div>
      <div class="col"></div>
    </div>

  </div>

</body>

</html>