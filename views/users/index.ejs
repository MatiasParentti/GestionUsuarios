<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Users</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

  <div class="d-flex justify-content-between align-items-center mb-3">
    
    <a href="/users/new" class="btn btn-primary">Nuevo Usuario</a>
  </div>
  <ul class="list-group">
    <% users.forEach(user => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div class="w-100 d-flex flex-column flex-md-row justify-content-between align-items-center">
          <div>
            <span><strong><%= user.user %></strong> â€” <%= user.email %></span>
            <br>
            Rol: <%= user.rol_name %>
            <br>
            Permisos por rol:
            <% 
              let foundPerm = false;
              perms.forEach(perm => {
                if (perm.role_id === user.role_id) { %>
                  <%= JSON.stringify(perm.permisos) %>
                  <% foundPerm = true; %>
                <% }
              });
              if (!foundPerm) { %>
                <span class="text-muted">Sin permisos</span>
              <% }
            %>
            

            
                  

            <div>
              <small class="text-muted">
            
                <br>
               
                <br>
                
              </small>
            </div>
          </div>
          <div class="d-flex flex-row mt-2 mt-md-0">
            <form action="/users/<%= user.id %>/edit" method="GET" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-warning me-2">Editar</button>
            </form>
            <form action="/users/<%= user.id %>/delete" method="post" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
            </form>
          </div>
        </div>
      </li>
    <% }) %>
  </ul>
</body>
</html>






  